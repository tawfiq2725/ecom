<div class="content-body">
    <div class="container-fluid">
        <h2>Edit Category</h2>
        <form action="/admin/categories/edit/{{category._id}}" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control" value="{{category.name}}" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" class="form-control">{{category.description}}</textarea>
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" name="image" id="categoryImage" class="form-control">
                <input type="hidden" name="existingImage" value="{{category.image}}">
                <img id="category-cropped-image" src="/uploads/categories/{{category.image}}" alt="Current Image" style="width: 100px;">
            </div>
            <button type="submit" class="btn btn-primary">Update Category</button>
        </form>
    </div>
</div>

<!-- Modal for image cropping -->
<div class="modal fade" id="cropModalCategory" tabindex="-1" role="dialog" aria-labelledby="cropModalLabelCategory" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cropModalLabelCategory">Crop Image</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="img-container">
                    <img id="image-to-crop-category" src="" alt="Picture">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="cropButtonCategory">Crop</button>
            </div>
        </div>
    </div>
</div>
