<script>
    let saleChart, orderTypeChart, categoryChart, orderQuantityChart;

    const createCharts = (data) => {
        const ctx1 = document.getElementById('saleChart').getContext('2d');
        saleChart = new Chart(ctx1, {
            type: 'bar',
            data: data.saleChartInfo,
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        const ctx2 = document.getElementById('orderTypeChart').getContext('2d');
        orderTypeChart = new Chart(ctx2, {
            type: 'doughnut',
            data: data.orderTypeChartInfo,
            options: {
                responsive: true,
            }
        });

        const ctx3 = document.getElementById('categoryChart').getContext('2d');
        categoryChart = new Chart(ctx3, {
            type: 'bar',
            data: data.categoryChartInfo,
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        const ctx4 = document.getElementById('orderQuantityChart').getContext('2d');
        orderQuantityChart = new Chart(ctx4, {
            type: 'line',
            data: data.orderQuantityChartInfo,
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    };

const updateCharts = async (filter) => {
    try {
        const response = await fetch(`/admin/dashboard?filter=${filter}`, {
            headers: {
                'Accept': 'application/json'
            }
        });

        if (!response.ok) {
            throw new Error('Network response was not ok');
        }

        const data = await response.json();

        saleChart.data = data.saleChartInfo;
        saleChart.update();

        orderTypeChart.data = data.orderTypeChartInfo;
        orderTypeChart.update();

        categoryChart.data = data.categoryChartInfo;
        categoryChart.update();

        orderQuantityChart.data = data.orderQuantityChartInfo;
        orderQuantityChart.update();
    } catch (error) {
        console.error('Error updating chart data:', error);
        alert('Failed to update chart data. Please try again later.');
    }
};




    document.addEventListener('DOMContentLoaded', () => {
        const initialData = {
            saleChartInfo: {{{json saleChartInfo}}},
            orderTypeChartInfo: {{{json orderTypeChartInfo}}},
            categoryChartInfo: {{{json categoryChartInfo}}},
            orderQuantityChartInfo: {{{json orderQuantityChartInfo}}}
        };
        createCharts(initialData);

        // Add event listeners to filter buttons
        document.getElementById('filterYearly').addEventListener('click', () => updateCharts('yearly'));
        document.getElementById('filterMonthly').addEventListener('click', () => updateCharts('monthly'));
        document.getElementById('filterWeekly').addEventListener('click', () => updateCharts('weekly'));
    });
</script>

