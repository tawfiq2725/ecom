<section class="forget-password-page account">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="block text-center">
          <a class="logo" href="index.html">
            <img src="images/logo.png" alt="">
          </a>
          <h2 class="text-center">Forgot Password</h2>
          {{#if error_msg}}
            <p class="text-danger">{{error_msg}}</p>
          {{/if}}
          {{#if success_msg}}
            <p class="text-success">{{success_msg}}</p>
          {{/if}}
          <form class="text-left clearfix" method="POST" action="/auth/forgot-pass">
            <div class="form-group">
              <input type="email" name="email" class="form-control" placeholder="Account email address" required>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-main text-center">Request password reset</button>
            </div>
          </form>
          <p class="mt-20"><a href="/login">Back to log in</a></p>
        </div>
      </div>
    </div>
  </div>
</section>
