
<div class="container text-center" style="width: 500px; height: 400px;">
    <h1>{{title}}</h1>
{{#if error_msg}}
<p style="color: red;">{{error_msg}}</p>
{{/if}}
<form action="/auth/google/additional-info" method="post">
    <div class="form-group">
        <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{mobile}}" required>
    </div>
    <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="Password" required>
    </div>
    <div class="form-group">
        <input type="password" class="form-control" name="password2" placeholder="Confirm Password" required>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
</div>

