<div class="content-body">
    <div class="container-fluid">
        <div class="row mb-2 mt-4">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/products">Products</a></li>
                        <li class="breadcrumb-item active" aria-current="page">{{product.name}}</li>
                    </ol>
                </nav>
            </div>
        </div>
        <h2>{{product.name}}</h2>
        <div class="row">
            <div class="col-md-6">
                <img src="/uploads/products/{{product.mainImage}}" class="img-fluid" alt="{{product.name}} " style="width: 300px; height:350px">
                <div class="sub-images mt-3">
                    {{#each product.subImages}}
                        <img src="/uploads/products/{{this}}" class="img-thumbnail" alt="{{../product.name}}" style="width: 150px; height:200px">
                    {{/each}}
                </div>
            </div>
            <div class="col-md-6">
                <h3>Description</h3>
                <p>{{product.description}}</p>
                <h4>Price: ${{product.price}}</h4>
                <h5>Stock: {{product.stock}}</h5>
                <h6>Category: {{product.category.name}}</h6>
                <a href="#" class="btn btn-primary">Add to Cart</a>
            </div>
        </div>
    </div>
</div>
